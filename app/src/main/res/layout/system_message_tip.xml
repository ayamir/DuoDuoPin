<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sys_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/msg_pic"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:src="@drawable/system_msg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sys_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="系统消息"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintLeft_toRightOf="@id/msg_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/msg_pic" />

    <TextView
        android:id="@+id/sys_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxEms="13"
        android:maxLines="1"
        android:text="最新一个的内容内容内容內容內容內容內容內容"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/msg_pic"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintLeft_toRightOf="@id/msg_pic"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/sys_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="0dp"
        android:text="2020.08.09"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>