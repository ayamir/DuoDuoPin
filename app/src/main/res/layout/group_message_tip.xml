<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/group_pic"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:src="@drawable/group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="群组名"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintLeft_toRightOf="@id/group_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/group_pic" />

    <TextView
        android:id="@+id/grp_msg_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/grp_title"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxEms="13"
        android:maxLines="1"
        android:text="person"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/group_pic"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintLeft_toRightOf="@id/group_pic"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/grp_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/grp_title"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxEms="13"
        android:maxLines="1"
        android:text="newMsg"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/group_pic"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintLeft_toRightOf="@id/grp_msg_nickname"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/grp_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="0dp"
        android:text="22:46"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintLeft_toRightOf="@id/grp_msg_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>